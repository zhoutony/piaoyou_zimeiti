extends ./layout

block title
  title 

block prepend body
  //- wrap
  div.wrap.flexbox_v.molist

    div.tabs.movietabs
      div.flexbox_v_c
        div.city
          a#chooseCity
            span
              | 北京市
            i.demo-icon.icon-down-open-mini
        ul.flex.flexbox#menutop
          li.curr.flex._hot._hoting(data-type="hot") 正在上映
          //- li.flex._coming(data-type="coming") 即将上映

    section.movielist.flex
      div.addimg.fmaddimg
      if (data && !data.err && data.movies)
        ul
          each movie, index in data.movies
            li.flexbox(data-url="/#{data.publicsignal}/#{data.locationId}/ticket/#{movie.movieID}")
              div.picmid
                a(href="javascript:;")
                  img(src="#{movie.movieImage}")
              div.txtmid.flex
                div.flexbox
                  h2.flex
                    b #{movie.movieNameCN}
                    span #{movie.movieVersions}
                    //- span.curr 巨幕
                  a(href="javascript:;").btn_buy
                    span 购票
                p #{movie.intro}
                p
                  | 导演: #{movie.director}
                p
                  | 主演: #{movie.actors}
                p
                  | 上映日期: #{movie.releaseTime}
              div.toolmid
                div.btnbar
                  - var firendClass = movie.isFriendsPay ? '' : 'm-hide';
                  - var redbagClass = movie.isMoneyPacket ? '' : 'm-hide';
                  a(class="#{firendClass}")
                    i.ico_firend
                    span 好友买单
                  a(class="#{redbagClass}")
                    i.ico_redbag
                    span 邀红包
              if (movie.MinPrice)
                span.minPrice #{(movie.MinPrice/100).toFixed(2)}
    div.navtool
      ul.flexbox
        //- li.flex
        //-   a(href="/#{data.publicsignal}")
        //-     i.n01
        //-     | 推荐
        li.flex.newflex.curr
          a(href="javascript:;")
            i.n02
            | 购票
        li._piaoyouguide
          a
            i.nadd
        //- li.flex.newflex
        //-   //- .showtips
        //-   //- a(href="javascript:;")#findbox
        //-   a(href="/#{data.publicsignal}/movies")
        //-     i.n03
        //-     | 电影
        //-     div.navtips
        li.flex
          a(href="/#{data.publicsignal}/my/index")
            i.n04
            | 我的




block prepend footer

block prepend script
  script
    | var showtype = "#{data.showtype}";
    | window.publicsignal = "#{data.publicsignal}";
    | var shareInfo = !{JSON.stringify(data.shareInfo)};
  script(src="#{assets.common.js}")
  script(src="#{assets.filmlist.js}")
  script(src="#{assets.getTitle.js}")
