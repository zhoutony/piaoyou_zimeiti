        | var shareInfo = !{JSON.stringify(data.baseData.shareInfo)};
      else
        | var thirdIndex = '0';
        | var shareInfo = '';
      | window.publicsignal = '#{data.publicsignal}';
      | var cachetime = '#{data.cachetime}';

  script(src="#{assets.common.js}")
