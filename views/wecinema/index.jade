    //-     p
    //-         a(href="/#{data.publicsignal}/#{data.locationId}/filmlist/hot")
    //- a.gotolist.showgotolist( href="/#{data.publicsignal}/selflist")
    div.navtool
      ul.flexbox
        li.flex.curr
          a(href="/#{data.publicsignal}")
            i.n01
            | 推荐
        li.flex.newflex
          a(href="/#{data.publicsignal}/#{data.locationId}/filmlist/hot")
            i.n02
            | 购票
        li._piaoyouguide
          a
            i.nadd
        li.flex.newflex
          //- .showtips
          a(href="/#{data.publicsignal}/movies")
            i.n03
            | 电影
            div.navtips
        li.flex
          a(href="/#{data.publicsignal}/my/index")
            i.n04
            | 我的

